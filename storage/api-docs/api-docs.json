{
    "openapi": "3.0.0",
    "info": {
        "title": "TODO List API",
        "description": "Documentación de la API de TODO List",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/v2/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registrar un usuario",
                "operationId": "registerUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario registrado correctamente"
                    },
                    "400": {
                        "description": "Error de validación o datos incorrectos"
                    },
                    "422": {
                        "description": "Error de dominio"
                    },
                    "500": {
                        "description": "Error inesperado"
                    }
                }
            }
        },
        "/v2/auth/": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Obtener todos los usuarios (protegido)",
                "operationId": "getAllUsers",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número de página",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Cantidad de usuarios por página",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Listado paginado de usuarios"
                    },
                    "401": {
                        "description": "Usuario no autenticado"
                    },
                    "500": {
                        "description": "Error inesperado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "RegisterUserSchema": {
                "required": [
                    "email",
                    "name",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "name": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    }
                },
                "type": "object"
            },
            "RegisterUserResponse": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "email": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Operaciones de autenticación"
        }
    ]
}